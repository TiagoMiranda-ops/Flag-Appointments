<%-include('include/_header')%>

<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i>All Appointments</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Appointment</h2>
            <span class="text-light">Use the form below to update an appointment</span>
        </div>

        <form method="POST" id="update_appointment">
            <div class="new_appointment">
                <div class="form-group">
                    <label for="customer" class="text-light">Customer</label>
                    <input type="hidden" name="id" value="<%= appointment._id%>">
                    <input type="text" name="customer" value="<%= appointment.customer%>" placeholder="Your name goes here">
                </div>
                <div class="form-group">
                    <label for="date" class="text-light">Proposed Date</label>
                    <input type="hidden" name="id" value="<%= appointment._id%>">
                    <input type="text" name="date" value="<%= appointment.date%>" placeholder="YYYY-MM-DD">
                </div>
                <div class="form-group">
                    <label for="status" class="text-light">Status</label>
                    <input type="hidden" name="id" value="<%= appointment._id%>">
                    <input type="text" name="status" value="<%= appointment.status%>" placeholder="Either 'Accepted' or 'Declined">
                </div>
                <div class="form-group">
                    <label for="broker" class="text-light">Broker</label>
                    <input type="hidden" name="id" value="<%= appointment._id%>">
                    <input type="text" name="broker" value="<%= appointment.broker%>" placeholder="Your name goes here">
                </div>
                
                <div class="form-group">
                    <button type="submit" class="btn text-dark update">Confirm Now</button>
                </div>
        
        
            </div>
        </form>

        
    </div>
</main>


<%-include('include/_footer')%>